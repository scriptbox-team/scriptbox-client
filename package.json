{
  "name": "scriptbox-client",
  "version": "0.0.1",
  "description": "A client for scriptbox which can be deployed to both electron and browser",
  "private": true,
  "scripts": {
    "build": "npm run build-web && npm run build-electron",
    "build-electron": "tsc && npm run copy-electron",
    "build-web": "webpack && npm run copy-web",
    "package": "electron-packager . --overwrite",
    "copy-electron": "cpx \"./res/electron/**/*\" dist/electron && cpx \"./res/shared/**/*\" dist/electron",
    "copy-web": "cpx \"./res/web/**/*\" dist/web && cpx \"./res/shared/**/*\" dist/web",
    "watch-electron": "tsc -w",
    "watch-web": "webpack -w",
    "watch-copy-web": "cpx -w \"./res/web/**/*\" dist/web",
    "watch-copy-shared-web": "cpx -w \"./res/shared/**/*\" dist/web",
    "watch-copy-electron": "cpx -w \"./res/eilectron/**/*\" dist/electron",
    "watch-copy-shared-electron": "cpx -w \"./res/shared/**/*\" dist/electron",
    "watch-copy": "npm-run-all --parallel watch-copy-web watch-copy-shared-web watch-copy-electron watch-copy-shared-electron",
    "watch": "npm-run-all --parallel watch-electron watch-web watch-copy",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "test": "jest --verbose false --runInBand",
    "start": "npm run start-electron",
    "start-electron": "cd ./dist/electron && electron main.js",
    "start-web": "npm run serve",
    "soak-test": "npm-run-all --parallel soak-single soak-single soak-single soak-single soak-single soak-single",
    "soak-single": "cd ./dist/electron && node main-soak-test.js",
    "manual-test": "node ./dist/electron/manual_tests/main.js",
    "serve": "live-server dist/web"
  },
  "repository": {
    "type": "git",
    "url": "http://www.github.com/scriptbox-team/scriptbox-client"
  },
  "author": "Aaron Freytag",
  "license": "GPL-3.0",
  "main": "dist/electron/main.js",
  "devDependencies": {
    "@types/fs-extra": "^8.0.1",
    "@types/jest": "^23.3.14",
    "@types/lodash": "^4.14.136",
    "@types/module-alias": "^2.0.0",
    "@types/pngjs": "^3.3.2",
    "@types/react": "^16.8.25",
    "@types/react-dom": "^16.8.5",
    "@types/react-resize-detector": "^4.0.1",
    "@types/webdriverio": "^4.8.0",
    "@types/ws": "^6.0.1",
    "awesome-typescript-loader": "^5.2.1",
    "cpx": "^1.5.0",
    "electron": "^4.2.8",
    "electron-packager": "^14.1.1",
    "jest": "^24.8.0",
    "live-server": "^1.2.1",
    "npm-run-all": "^4.1.5",
    "spectron": "^6.0.0",
    "ts-jest": "^24.0.2",
    "ts-loader": "^6.0.4",
    "tslint": "^5.18.0",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.5.3",
    "webpack": "^4.37.0",
    "webpack-cli": "^3.3.6"
  },
  "dependencies": {
    "browser-process-hrtime": "^1.0.0",
    "fs-extra": "^8.1.0",
    "is-ip": "^3.1.0",
    "isomorphic-ws": "^4.0.1",
    "lodash": "^4.17.20",
    "module-alias": "^2.2.0",
    "pixi-sound": "^3.0.4",
    "pixi.js": "^5.1.0",
    "pngjs": "^3.4.0",
    "react": "^16.12.0",
    "react-dom": "^16.8.6",
    "react-resize-detector": "^4.2.0",
    "source-map-support": "^0.5.12",
    "ws": "^6.2.1"
  }
}
